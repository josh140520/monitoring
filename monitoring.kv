                rgba: root.background_color_conn
            Rectangle:
                pos: self.pos
                size: self.size
        Label:
            text: root.app_name_conn
            font_size: dp(root.font_size_dp_conn)
            color: root.app_name_color_conn
        Label:
            text: " "
        Label:
            text: "LAN Connection"
        Label:
            text: " "
        Label:
            text: "WiFi Name: "
        TextInput:
            id: LanSSID
        Label:
            text: "WiFi Password: "
        TextInput:
            id: LanPass
        Label:
            text: "WAN Connection"

        Label:
            text: " "
        Label:
            text: "WiFi Name: "
        TextInput:
            id: WanSSID
        Label:
            text: "WiFi Password: "
        TextInput:
            id: WanPass


